{
  "main":    "file://public/index.html",
  "main":    "http://localhost:3000/index.html",
  "name":    "Orchard",
  "version": "0.1.0",

  "chromium-args": ["--allow-file-access-from-files",
                    "--disable-web-security",
                    "--enable-experimental-web-platform-features"],

  "window": {
      "title":    "Orchard",
      "width":     600,
      "height":    400,
      "show":      false,
      "frame":     true,
      "toolbar":   false,
      "resizable": true,
      "icon":     "icon.png"
  },

  "node-remote":  "<local>",

  "dependencies": {
      "search-index": "*"
  },

  "devDependencies": {
      "nw-gyp"  : "*",
      "connect" : "*"
  }
}
