{
  "main": "file://public/index.html",
  "main": "http://localhost:3000/index.html",
  "name": "Thinker",
  "version": "0.1.0",

  "chromium-args": ["--allow-file-access-from-files",
                    "--disable-web-security",
                    "--enable-experimental-web-platform-features"],

  "window": {
      "title": "Thinker",
      "width": 600,
      "height": 400,
      "show":   false,
      "frame":  true,
      "toolbar": false,
      "resizable": true,
      "icon": "thinker.png"
  },

  "node-remote":  "<local>",

  "dependencies": {
      "nano": "*"
  },

  "devDependencies": {
      "nw-gyp"  : "*",
      "connect" : "*"
  }
}
